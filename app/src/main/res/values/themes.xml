<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#B9E6E1</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="operatorbutton" parent="commonbutton">
        <item name="android:textColor">#DDA648</item>
    </style>
    <style name="digit_button" parent="commonbutton">

        <item name="android:textColor">@color/black</item>
    </style>
    <style name="commonbutton" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">70dp</item>
        <item name="cornerRadius">37dp</item>
        <item name="background">@color/white</item>
        <item name="android:textSize">30dp</item>
        <item name="android:layout_margin">13dp</item>
    
    </style>
</resources>